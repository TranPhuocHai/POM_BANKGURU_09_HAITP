<?xml version="1.0" encoding="UTF-8"?>
<suite name="Suite" parallel="false">

	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<listener class-name="commons.RetryListener" />
	</listeners>
	
	<test name="Test on FIREFOX">
		<parameter name="browser" value="firefox" />
		<parameter name="url" value="bankguru" />
		<classes>
			<class name="com.bankguru.user.Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.Payment" />
		</classes>
	</test>
	
	<test name="Test on FIREFOX HEADLESS">
		<parameter name="browser" value="firefoxheadless" />s
		<parameter name="url" value="bankguru" />
		<classes>
			<class name="com.bankguru.user.Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.Payment" />
		</classes>
	</test>

	
	<test name="Test on IE">
		<parameter name="browser" value="ie" />
		<parameter name="url" value="bankguru" />
		<classes>
			<class name="com.bankguru.user.Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.Payment" />
		</classes>
	</test>


	<test name="Test on CHROME">
		<parameter name="browser" value="chrome" />
		<parameter name="url" value="bankguru" />
		<classes>
			<class name="com.bankguru.user.Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.Payment" />
		</classes>
	</test>


	<test name="Test on CHROME HEADLESS">
		<parameter name="browser" value="chromeheadless" />s
		<parameter name="url" value="bankguru" />
		<classes>
			<class name="com.bankguru.user.Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.Payment" />
		</classes>
	</test>
	
	


</suite> 

